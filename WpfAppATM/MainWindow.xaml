        <Button HorizontalAlignment="Left" Margin="10,160,0,0" Tag="1" Name="cm1" Focusable="False" VerticalAlignment="Top" Width="46"  Height="37" Background="Black"  Foreground="#FFF0ECEC"  Click="Button_Click">1</Button>
